<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Study.Xamarin.AdicionarContatoPage"
             Title="Adicionar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Novo Contato"
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtNome" Placeholder="Nome"></Entry>
            <Entry x:Name="txtSobrenome" Placeholder="Sobrenome"></Entry>
            <Entry x:Name="txtDDD" Placeholder="DDD"></Entry>
            <Entry x:Name="txtTelefone" Placeholder="Telefone"></Entry>
            
            <Button Text="Cadastrar" x:Name="cadastrarContato" Clicked="CadastrarContato_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>